<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/editnamapelapor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/smoothgray"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:hint="Masukkan Nama Anda"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx2" />

    <TextView
        android:id="@+id/tx3"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Jenis Infrastruktur"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editnamapelapor"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/editjenisinfrastruktur"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/smoothgray"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:hint="Masukkan Jenis Infrastruktur"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx3" />
    <TextView
        android:id="@+id/tx4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Kecamatan"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editnamapelapor"
        app:layout_constraintLeft_toRightOf="@id/tx3"
        />

    <EditText
        android:id="@+id/editnamakecamatan"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/smoothgray"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginLeft="8dp"
        android:hint="Cth: Kecamatan Rumbai"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/editjenisinfrastruktur"
        app:layout_constraintTop_toBottomOf="@+id/tx4" />

    <TextView
        android:id="@+id/tx5"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Faktor Kerusakan"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editnamakecamatan"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/editfaktor"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/smoothgray"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:hint="Cth: Faktor Cuaca, Faktor Pemakaian"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx5" />

    <TextView
        android:id="@+id/tx6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editjenisinfrastruktur"
        app:layout_constraintLeft_toRightOf="@id/tx5"
        />
    <EditText
        android:id="@+id/edittanggallaporan"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/smoothgray"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginLeft="8dp"
        android:hint="penulisan: bulan/tanggal/tahun"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/editfaktor"
        app:layout_constraintTop_toBottomOf="@+id/tx6" />

    <TextView
        android:id="@+id/tx7"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Tingkat Kerusakan"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edittanggallaporan"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/edittingkatkerusakan"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/smoothgray"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:hint="Tingkat Kerusakan: 1-7"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx7" />

    <TextView
        android:id="@+id/tx8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tingkat Dampak"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editfaktor"
        app:layout_constraintLeft_toRightOf="@id/tx7"
        />
    <EditText
        android:id="@+id/edittingkatdampak"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/smoothgray"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginLeft="8dp"
        android:hint="Tingkat Dampak: 1-7"
        android:textColor="@color/textgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/edittingkatkerusakan"
        app:layout_constraintTop_toBottomOf="@+id/tx8" />



</androidx.constraintlayout.widget.ConstraintLayout>