<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BeritaDetilFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berita"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/ket"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/keterangan"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/user"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/detil_judul"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tips Belajar Mobile yang asik"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/detil_tgl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="20 Desember 2024"
        android:textStyle="italic"
        android:layout_marginTop="28dp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/detil_judul"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
    android:id="@+id/detil_deskripsi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
    android:textStyle="normal"
    android:layout_marginTop="12dp"
        android:justificationMode="inter_word"
    app:layout_constraintTop_toBottomOf="@+id/detil_tgl"
    app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>