<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/rounded"
    android:padding="7dp"
    >

    <TextView
        android:id="@+id/nama_pelapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jdlLaporan"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tgl_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/06/2024"
        android:textColor="@color/white"

        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/jenis_infrastruktur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jalan"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nama_pelapor"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/faktor_kerusakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faktor Cuaca"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/jenis_infrastruktur"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/kecamatan_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kecamatan Rumbai"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/faktor_kerusakan"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tingkat_kerusakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tgl_laporan"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tingkat_dampak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tingkat_kerusakan"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ic_edit_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_edit"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ic_hapus_laporan"
        />
    <ImageView
        android:id="@+id/ic_hapus_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_hapus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>