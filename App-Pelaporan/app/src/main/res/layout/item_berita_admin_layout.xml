<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/tgl_berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tglLaporan"
        android:textColor="@color/primary"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/jdl_berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jdlSaran"
        android:textColor="@color/primary"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/desc_berita"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descLaporan"
        android:textColor="@color/primary"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jdl_berita"
        />

    <ImageView
        android:id="@+id/ic_edit_berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_edit_blue"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/desc_berita"
        app:layout_constraintRight_toLeftOf="@+id/ic_hapus_berita"
        />
    <ImageView
        android:id="@+id/ic_hapus_berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_hapus_blue"
        app:layout_constraintTop_toBottomOf="@+id/desc_berita"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>