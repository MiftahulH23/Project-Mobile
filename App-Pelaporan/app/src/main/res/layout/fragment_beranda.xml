<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">

    <include
        android:id="@+id/header"
        layout="@layout/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card1"
        />
    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@drawable/rounded"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/ket1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/keterangan1"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/ket1"
            android:backgroundTint="@color/white"
            android:text="@string/laporkan"
            android:textColor="@color/primary"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@drawable/rounded_white"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/ket2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/keterangan1"
            android:textColor="@color/primary"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/ket2"
            android:backgroundTint="@color/primary"
            android:text="@string/laporkan"
            android:textColor="@color/white"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berita Hari Ini"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <RelativeLayout
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/berita"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@drawable/rounded_white"
        android:layout_marginTop="30dp"
        android:padding="13dp"
        >
        <TextView
            android:id="@+id/berita1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/berita1"
            android:textColor="@color/textPrimary"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tgl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tgl1"
            android:layout_below="@+id/berita1"
            android:textColor="@color/textPrimary"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card3"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@drawable/rounded_white"
        android:layout_marginTop="20dp"
        android:padding="13dp"
        >
        <TextView
            android:id="@+id/berita2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/berita1"
            android:textColor="@color/textPrimary"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tgl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tgl1"
            android:layout_below="@+id/berita2"
            android:textColor="@color/textPrimary"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>