<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/ket"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/keterangan"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/user"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profil"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notifikasi"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/img_user"
            android:layout_marginRight="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@drawable/rounded"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/ket1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/keterangan1"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/btn_laporkan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/ket1"
            android:backgroundTint="@color/white"
            android:text="@string/laporkan"
            android:textColor="@color/primary"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@drawable/rounded_white"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/ket2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/keterangan1"
            android:textColor="@color/primary"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/btn_berikansaran"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/ket2"
            android:backgroundTint="@color/primary"
            android:text="@string/laporkan"
            android:textColor="@color/white"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berita"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ListView
        android:id="@+id/lv_output"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="12dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berita" />
</androidx.constraintlayout.widget.ConstraintLayout>