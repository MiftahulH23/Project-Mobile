<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaranFragment">
    <include
        android:id="@+id/header_saran"
        layout="@layout/header_saran"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ListView
        android:id="@+id/lv_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_saran" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btntambahsaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary"
        android:backgroundTint="@color/white"
        app:icon="@drawable/ic_tambah"
        app:iconSize="32dp"
        app:iconTint="@color/primary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lv_output"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>