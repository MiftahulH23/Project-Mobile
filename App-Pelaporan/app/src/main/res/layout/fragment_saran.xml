<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaranFragment">
    <include
        android:id="@+id/header_saran"
        layout="@layout/header_saran"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/list"
        />
    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header_saran"
        app:layout_constraintLeft_toRightOf="parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/img_saran"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_cardimage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/jdl_saran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jdlSaran"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_saran"
                />

            <TextView
                android:id="@+id/tgl_saran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tglLaporan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/img_saran"
                app:layout_constraintTop_toBottomOf="@+id/jdl_saran"
                />

            <TextView
                android:id="@+id/desc_saran"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descLaporan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_saran"
                />

            <ImageView
                android:id="@+id/ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ic_hapus"
                />
            <ImageView
                android:id="@+id/ic_hapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_hapus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/img_saran2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_cardimage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/jdl_saran2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jdlSaran"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_saran2"
                />

            <TextView
                android:id="@+id/tgl_saran2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tglLaporan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/img_saran2"
                app:layout_constraintTop_toBottomOf="@+id/jdl_saran2"
                />

            <TextView
                android:id="@+id/desc_saran2"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descSaran"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_saran2"
                />

            <ImageView
                android:id="@+id/ic_edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ic_hapus2"
                />
            <ImageView
                android:id="@+id/ic_hapus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_hapus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/img_saran3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_cardimage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/jdl_saran3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jdlSaran"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_saran3"
                />

            <TextView
                android:id="@+id/tgl_laporan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tglLaporan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/img_saran3"
                app:layout_constraintTop_toBottomOf="@+id/jdl_saran3"
                />

            <TextView
                android:id="@+id/desc_saran3"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descSaran"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_saran3"
                />

            <ImageView
                android:id="@+id/ic_edit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ic_hapus3"
                />
            <ImageView
                android:id="@+id/ic_hapus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_hapus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary"
        android:backgroundTint="@color/white"
        android:text="@string/tambahsaran"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:textAlignment="textStart"
        app:icon="@drawable/ic_tambah"
        app:iconSize="32dp"
        app:iconTint="@color/primary"
        app:iconGravity="end"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/list"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>